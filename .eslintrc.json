// .eslintrc.json
{
  "extends": "next/core-web-vitals",
  "plugins": ["unused-imports"],
  "rules": {
    "prefer-const": "error",
    "unused-imports/no-unused-imports": "error",
    "no-unused-vars": "off",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
